

<h3>Create a New Recipe Here:</h3>

<div class="container">
    <form method="post" action="/recipes">

        <h6> Recipe Name: </h6>
        <input type="text" name="recipe[name]" id="recipe_name">
        <h6>Chef: </h6>
        <input type="text" name="recipe[author]" id="recipe_author">
        <h6>Cuisine: </h6>
        <input type="text" name="recipe[cuisine]" id="recipe_cuisine">
        <h6>Meal: </h6>
        <% @meals.each do |meal| %>
            <p>
            <label>
                <input type="checkbox" name="recipe[meals][]" id="meal_<%= @meals.index(meal) %>" value="<%= meal %>" />
                <span><%= meal %></span>
            </label>
            </p>
        <% end %>
          
        <h6>Cooking/Prep Time: </h6>
        <input type="text" name="recipe[cook_time]" id="recipe_cook_time">

        <h5>Add Ingredients: </h5>
        <div class="row">
            <h6 class="col s2">Quantity: </h6>
            <h6 class="col s2">Unit: </h6>
            <h6 class="col s8">Ingredient: </h6>
        </div>

        <div class="row">
                <% 10.times do %>
                    <div class="col s2">
                        <input type="text" name=amts[] id="amts">
                    </div>
                    <div class="col s2">
                         <input type="text" name=units[] id="units">
                    </div>
                    <div class="col s8">
                         <input type="text" name=ings[] id="ings">
                    </div>
                <% end %>
        </div>
        <br><br>
        <div class ="row">
            <div class="col s12">
                <h4>Steps: </h4>
                <% i = 1 %>
                <% 10.times do %>
                    <%= "#{i}. " %><input type="text" name=steps[] id="step">
                    <% i += 1 %>
                <% end %>
            </div>
        </div>
        <input type="submit" value="submit">
    </form>
</div>
        
    

