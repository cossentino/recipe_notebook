

<h2>Create a New Recipe Here:</h2>

<div class="container">
    <form method="post" action="/recipes">
        <div class="row">
            <div class="col s2">
                <h4> Amount: </h4>
                <% 5.times do %>
                    <input type="text" name=amts[] id="amts">
                <% end %>
            </div>
            
            <div class="col s2">
                <h4> Unit: </h4>
                <% 5.times do %>
                    <input type="text" name=units[] id="units">
                <% end %>
            </div>
            
            
            <div class="col s8">
                <h4>Ingredient: </h4>
                <% 5.times do %>
                    <input type="text" name=ings[] id="ings">
                <% end %>
            </div>
        </div>

        <br><br>

        <div class ="row">
            <div class="col s12">
                <h4>Steps: </h4>
                <% i = 1 %>
                <% 5.times do %>
                    <%= "#{i}. " %><input type="text" name=steps[] id="step">
                    <% i += 1 %>
                <% end %>
            </div>
        </div>
        <input type="submit" value="submit">
    </form>
</div>
        
    

